{
  "name": "Python Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-toolsai.jupyter"
      ]
    }
  },
  "forwardPorts": [8000],
  "remoteUser": "vscode",
    // ホストの ~/.aws をコンテナの /home/vscode/.aws にマウント（読み取り専用推奨）
  "mounts": [
    "source=${localEnv:HOME}/.aws,target=/home/vscode/.aws,type=bind,consistency=cached"
  ],

  // 任意: 既定プロファイルやリージョンをホスト環境変数から引き継ぎ
  "containerEnv": {
    "AWS_PROFILE": "${localEnv:AWS_PROFILE}",
    "AWS_DEFAULT_REGION": "${localEnv:AWS_DEFAULT_REGION}",
    "AWS_REGION": "${localEnv:AWS_REGION}"
  },
  "postCreateCommand": "pip install --upgrade pip && ( [ -f requirements.txt ] && pip install -r requirements.txt || true )"

}